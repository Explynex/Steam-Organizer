<UserControl x:Class="Steam_Account_Manager.Themes.MainPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Steam_Account_Manager.Themes"
             mc:Ignorable="d" 
            >
    <PasswordBox x:Name="passwordBox" 

                 PasswordChanged="PasswordBox_PasswordChanged"
                 Width="190"
                 VerticalContentAlignment="Center"
                 Padding="6 0 25 0"
                 Background="{DynamicResource background_border_color}"
                 BorderThickness="0"
                 Foreground="{DynamicResource second_text_color}"
                 MaxLength="50"/>


</UserControl>
