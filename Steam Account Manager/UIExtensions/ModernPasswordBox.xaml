<UserControl x:Class="Steam_Account_Manager.UIExtensions.ModernPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
            >
    <PasswordBox x:Name="passwordBox" 
                 PasswordChanged="PasswordBox_PasswordChanged"
                 Width="220"
                 VerticalContentAlignment="Center"
                 Padding="6 0 25 0"
                 Background="Transparent" 
                 SelectionBrush="{DynamicResource second_main_brush}"
                 CaretBrush="{DynamicResource atv_rectangles_shadow}"
                 BorderThickness="0"
                 Foreground="{DynamicResource second_text_color}"
                 MaxLength="50"/>


</UserControl>
