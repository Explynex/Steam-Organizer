<UserControl  x:Class="Steam_Account_Manager.ViewModels.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Steam_Account_Manager.ViewModels.View"
             xmlns:vm="clr-namespace:Steam_Account_Manager.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!--Header-->
        <TextBlock Grid.Row="1" Text="{DynamicResource sv_settings_title}" FontSize="30"  Foreground="{DynamicResource second_settings_text}"
                   Grid.Column="0" FontFamily="Cascadia Mono" />

        <Rectangle Height="1" VerticalAlignment="Top" Grid.Row="1"
                   Fill="{DynamicResource settings_rectangle}" Margin="0,49,0,0"/>


        <!--Themes panel-->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Grid.Row="2" Text="{DynamicResource sv_theme}" Style="{StaticResource settingTextBlock}"/>
            <RadioButton Style="{StaticResource themeButton}"
                         Content="/Images/dark_preview.png"
                         IsChecked="{Binding ThemeMode[0]}"/>
            
            <RadioButton Style="{StaticResource themeButton}"
 Content="/Images/light_preview.png"
                         IsChecked="{Binding ThemeMode[1]}"/>

            <RadioButton Style="{StaticResource themeButton}"
                         Content="/Images/nebula_preview.png"
                         IsChecked="{Binding ThemeMode[2]}">
            </RadioButton>
        </StackPanel>
        
        <!--Language panel-->
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <TextBlock Text="{DynamicResource sv_language}" Style="{StaticResource settingTextBlock}"/>
            <RadioButton Style="{StaticResource languageButton}"          
                         IsChecked="{Binding LocaleMode[0]}"
                         Content="/Images/Countries_flags/United_Kingdom.png"/>
            <RadioButton Style="{StaticResource languageButton}"
                         IsChecked="{Binding LocaleMode[1]}"
                          Content="/Images/Countries_flags/Russia.png"/>
            <RadioButton Style="{StaticResource languageButton}"
                         IsChecked="{Binding LocaleMode[2]}"
                          Content="/Images/Countries_flags/Ukraine.png"/>
        </StackPanel>

        <!--Close after logging panel-->
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <TextBlock Text="{DynamicResource sv_close_after_logging}" 
                       Style="{StaticResource settingTextBlock}"/>
            <ToggleButton Style="{StaticResource settingsButton}"
                          IsChecked="{Binding AutoCloseMode}"/>
        </StackPanel>
        
        <!--Disable confirm when del acc-->
        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <TextBlock Grid.Row="5" Text="{DynamicResource sv_confirm_when_del}" Style="{StaticResource settingTextBlock}"/>
            <ToggleButton IsChecked="{Binding NoConfirmMode}"
                          Style="{StaticResource settingsButton}"/>
        </StackPanel>

        <!--Disable confirm when del acc-->
        <StackPanel Grid.Row="6" Orientation="Horizontal">
            <TextBlock Grid.Row="5" Text="Dont collect account information" Style="{StaticResource settingTextBlock}"/>
            <ToggleButton IsChecked="{Binding TakeAccountInfoMode}"
                          Style="{StaticResource settingsButton}"/>
        </StackPanel>





        <Button Grid.Row="7" Width="200" Content="{DynamicResource sv_save_changes}" Cursor="Hand"
                Command="{Binding SaveChangesCommand}"/>
    </Grid>
</UserControl>
