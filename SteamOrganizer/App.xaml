<Application x:Class="SteamOrganizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:converters="clr-namespace:SteamOrganizer.MVVM.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ColorSchemes/Dark.xaml"/>

                <ResourceDictionary Source="Locale/lang.en-US.xaml"/>

                <ResourceDictionary Source="Styles/Misc.xaml"/>

                <ResourceDictionary Source="Styles/Buttons.xaml"/>

                <ResourceDictionary Source="Styles/RadioButton.xaml"/>

                <ResourceDictionary Source="Styles/TextBox.xaml"/>

                <ResourceDictionary Source="Styles/ComboBox.xaml"/>

                <ResourceDictionary Source="Styles/Slider.xaml"/>

                <ResourceDictionary Source="Styles/ScrollBar.xaml"/>

                <ResourceDictionary Source="Styles/ContextMenu.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <converters:ToBooleanConverter x:Key="ToBooleanConverter"/>
            <converters:ToVisibilityConverter x:Key="ToVisibilityConverter"/>
            <converters:ToVisibilityInvertedConverter x:Key="ToVisibilityInvertedConverter"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
