<UserControl  x:Class="SteamOrganizer.MVVM.View.Controls.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:SteamOrganizer.MVVM.ViewModels"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
             xmlns:ui="clr-namespace:SteamOrganizer.UIExtensions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600"
               >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <TextBlock Grid.Row="0" Text="{DynamicResource sv_settings_title}" FontSize="30"  Foreground="{DynamicResource second_settings_text}"
                   Grid.Column="0" Margin="0 10" FontFamily="Cascadia Mono" />

        <Rectangle Height="1" VerticalAlignment="Top" Grid.Row="0"
                   Fill="{DynamicResource settings_rectangle}" Margin="0,60,0,0"/>

        <ScrollViewer Grid.Row="1" >
            <StackPanel>
                <Button Content="Export" Margin="10" Click="Button_Click"/>
                <Button Content="Import" Margin="10" Click="Button_Click_1"/>
                <TextBlock Text="{DynamicResource sv_title_interface}" 
                           VerticalAlignment="Center" Opacity="0.9"
                           FontFamily="Cascadia Mono"  FontSize="20" Margin="5 -3 0 8"  Foreground="{DynamicResource second_settings_text}"/>

                <!--Themes panel-->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{DynamicResource sv_theme}" Style="{StaticResource settingTextBlock}"/>
                    <RadioButton Style="{StaticResource themeButton}"
                         Content="/Images/dark_preview.png"
                         IsChecked="{Binding Properties.Theme,Converter={StaticResource IndexByteBooleanConverter},ConverterParameter=0,Mode=OneWay}"
                         Command="{Binding ChangeThemeCommand}" CommandParameter="0"/>

                    <RadioButton Style="{StaticResource themeButton}"
                         Content="/Images/light_preview.png"
                         IsChecked="{Binding Properties.Theme,Converter={StaticResource IndexByteBooleanConverter},ConverterParameter=1,Mode=OneWay}"
                         Command="{Binding ChangeThemeCommand}" CommandParameter="1"/>

                    <RadioButton Style="{StaticResource themeButton}"
                         Content="/Images/nebula_preview.png"
                         IsChecked="{Binding Properties.Theme,Converter={StaticResource IndexByteBooleanConverter},ConverterParameter=2,Mode=OneWay}"
                         Command="{Binding ChangeThemeCommand}" CommandParameter="2">
                    </RadioButton>
                </StackPanel>

                <!--Language panel-->
                <StackPanel  Orientation="Horizontal" Margin="0 8 0 2">
                    <TextBlock Text="{DynamicResource sv_language}" Style="{StaticResource settingTextBlock}"/>
                    <RadioButton Style="{StaticResource languageButton}"          
                         IsChecked="{Binding Properties.Language,Converter={StaticResource IndexByteBooleanConverter},ConverterParameter=0,Mode=OneWay}"
                         Content="/Images/Countries_flags/United_Kingdom.png"
                         Command="{Binding ChangeLanguageCommand}" CommandParameter="0"/>
                    <RadioButton Style="{StaticResource languageButton}"
                         IsChecked="{Binding Properties.Language,Converter={StaticResource IndexByteBooleanConverter},ConverterParameter=1,Mode=OneWay}"
                         Content="/Images/Countries_flags/Russia.png"
                         Command="{Binding ChangeLanguageCommand}" CommandParameter="1"/>
                    <RadioButton Style="{StaticResource languageButton}"
                         IsChecked="{Binding Properties.Language,Converter={StaticResource IndexByteBooleanConverter},ConverterParameter=2,Mode=OneWay}"
                         Content="/Images/Countries_flags/Ukraine.png"
                         Command="{Binding ChangeLanguageCommand}" CommandParameter="2"/>
                </StackPanel>

                <Rectangle Margin="0 12 0 15" Height="0.2" Width="570" Fill="{DynamicResource atv_rectangles_shadow}" HorizontalAlignment="Center">
                    <Rectangle.Effect>
                        <BlurEffect/>
                    </Rectangle.Effect>
                </Rectangle>

                <TextBlock Text="{DynamicResource sv_title_extended}" 
                           VerticalAlignment="Center" Opacity="0.9"
                           FontFamily="Cascadia Mono"  FontSize="20" Margin="5 0 0 0"  Foreground="{DynamicResource second_settings_text}"/>

                <!-- Custom steam web api key -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                    <TextBlock Text="{DynamicResource sv_steam_key}" Style="{StaticResource settingTextBlock}"/>
                    <Border Background="{DynamicResource first_main_brush}" Height="35"
                    Width="250" CornerRadius="5" Margin="6 5 0 5" BorderThickness="0.7" BorderBrush="{DynamicResource buttons_border_brush}">
                        <StackPanel Orientation="Horizontal" Margin="10 5 10 5">
                            <Icon:PackIconMaterial x:Name="apiIcon" Kind="Api" Foreground="{DynamicResource settings_buttons_isMouseOver}"
                                           VerticalAlignment="Center" Height="20" Width="20" />

                            <TextBox Margin="5 0 0 0" Width="205"  Foreground="{DynamicResource first_settings_text}"
                         Text="{Binding Properties.WebApiKey,Mode=OneWay}" VerticalAlignment="Center" SelectionBrush="{DynamicResource second_main_brush}"
                         Background="{DynamicResource first_main_brush}" MaxLength="32" BorderThickness="0" CaretBrush="White"
                         TextChanged="ApiKey_TextChanged"/>
                        </StackPanel>
                    </Border>

                    <Button Style="{StaticResource ModernServiceButton}"  Margin="8 7 0 7" Width="22" Height="22" 
                    VerticalAlignment="Center" Background="Transparent" BorderThickness="0"
                    Command="{Binding OpenApiKeyUrlCommand}">
                        <Icon:PackIconMaterial Width="20" Height="20" Kind="Information"/>
                        <Button.ToolTip>
                            <ToolTip ContentStringFormat="{DynamicResource sv_popup_apiKeyInfo}"/>
                        </Button.ToolTip>
                    </Button>

                    <Button x:Name="ErrorApiKey" Style="{StaticResource ErrorAlert}" 
                    Margin="5 7 0 7" Width="18" Height="18" Visibility="Collapsed"
                    VerticalAlignment="Center" Background="Transparent" BorderThickness="0">
                        <Icon:PackIconMaterial Width="15" Height="15" Kind="Alert"/>
                        <Button.ToolTip>
                            <ToolTip ContentStringFormat="{DynamicResource sv_popup_maxApiKeyLength}"/>
                        </Button.ToolTip>
                    </Button>

                </StackPanel>

                <!-- Custom steam web api key -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{DynamicResource sv_crypto_key}" Style="{StaticResource settingTextBlock}"/>
                    <Border Background="{DynamicResource first_main_brush}" Height="35"
                    Width="275" CornerRadius="5" Margin="6 5 0 5" BorderThickness="0.7" BorderBrush="{DynamicResource buttons_border_brush}">
                        <StackPanel Orientation="Horizontal" Margin="10 5 10 5">

                            <Icon:PackIconMaterial Kind="ShieldKeyOutline" Foreground="{DynamicResource settings_buttons_isMouseOver}"
                                           VerticalAlignment="Center" Height="20" Width="20" />

                            <Grid  Margin="5 0 0 0" VerticalAlignment="Center">
                                <TextBox x:Name="CryptoKey" Width="235"  Foreground="{DynamicResource first_settings_text}"
                                         IsReadOnly="True" Background="{DynamicResource first_main_brush}" MaxLength="32" 
                                         BorderThickness="0" CaretBrush="White" SelectionBrush="{DynamicResource second_main_brush}"/>
                                <TextBlock Text="{DynamicResource sv_crypto_key_default}" Foreground="{DynamicResource first_settings_text}"
                                           Visibility="{Binding ElementName=CryptoKey,Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Button Style="{StaticResource ModernServiceButton}"  Margin="8 7 0 7" Width="22" Height="22" 
                    VerticalAlignment="Center" Background="Transparent" BorderThickness="0">
                        <Icon:PackIconMaterial Width="20" Height="20" Kind="Information"/>
                        <Button.ToolTip>
                            <ToolTip ContentStringFormat="{DynamicResource sv_popup_cryptoKeyInfo}"/>
                        </Button.ToolTip>
                    </Button>

                    <Button Style="{StaticResource ErrorAlert}" Foreground="{DynamicResource menu_button_background}" 
                    Margin="5 7 0 7" Width="18" Height="18" VerticalAlignment="Center"
                    Background="Transparent" BorderThickness="0" Click="GenerateKey_Click">
                        <Icon:PackIconMaterial Width="15" Height="15" Kind="RefreshCircle"/>
                        <Button.ToolTip>
                            <ToolTip ContentStringFormat="{DynamicResource sv_popup_generateCryptoKey}"/>
                        </Button.ToolTip>
                    </Button>

                    <Button Style="{StaticResource ErrorAlert}" Foreground="DarkOrange" 
                    Margin="5 7 0 7" Width="18" Height="18" VerticalAlignment="Center"
                    Background="Transparent" BorderThickness="0" Click="ResetKey_Click">
                        <Icon:PackIconMaterial Width="15" Height="15" Kind="LockReset"/>
                        <Button.ToolTip>
                            <ToolTip ContentStringFormat="{DynamicResource sv_popup_resetCrypto}"/>
                        </Button.ToolTip>
                    </Button>

                </StackPanel>


                <!--Close action after logging -->
                <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                    <TextBlock Text="{DynamicResource sv_action_after_logging}" 
                       Style="{StaticResource settingTextBlock}"/>
                    <ComboBox Margin="10 0 0 0" Width="150" Height="27" SelectedIndex="{Binding ActionAfterLogin}" ItemsSource="{DynamicResource sv_actions_after_logging_list}"/>
                </StackPanel>

                <DockPanel Margin="0 8 0 0">
                    <TextBlock Text="{DynamicResource sv_workingFolder}" Style="{StaticResource settingTextBlock}"/>
                    <Button HorizontalAlignment="Left" Margin="10 0 0 0" ToolTipService.InitialShowDelay="450"
                          Style="{StaticResource ModernDefaultButton}"   Width="50" Height="27"
                            Click="OpenRootFolder">
                        <Button.ToolTip>
                            <ToolTip ContentStringFormat="{DynamicResource sv_workingFolder_Tip}"/>
                        </Button.ToolTip>
                        <Icon:PackIconMaterial Kind="Folder"/>
                    </Button>
                </DockPanel>



                <Rectangle Margin="0 12 0 15" Height="0.2" Width="570" Fill="{DynamicResource atv_rectangles_shadow}" HorizontalAlignment="Center">
                    <Rectangle.Effect>
                        <BlurEffect/>
                    </Rectangle.Effect>
                </Rectangle>

                <TextBlock Text="{DynamicResource sv_title_general}" 
                           VerticalAlignment="Center" Opacity="0.9"
                           FontFamily="Cascadia Mono"  FontSize="20" Margin="5 0 0 0"  Foreground="{DynamicResource second_settings_text}"/>

                <!-- Delete without confirmation -->
                <DockPanel  Margin="0 5 0 0">
                    <TextBlock Text="{DynamicResource sv_confirm_when_del}" Style="{StaticResource settingTextBlock}"/>
                    <ToggleButton IsChecked="{Binding Properties.NoConfirmMode}"
                          Style="{StaticResource ModernSwitchToggleButton}"/>
                </DockPanel>

                <!-- Dont collect information -->
                <DockPanel>
                    <TextBlock Text="{DynamicResource sv_info_collect}" Style="{StaticResource settingTextBlock}"/>
                    <ToggleButton IsChecked="{Binding Properties.TakeAccountInfo}"
                          Style="{StaticResource ModernSwitchToggleButton}"/>
                </DockPanel>

                <!-- Dont Remember password -->
                <DockPanel>
                    <TextBlock Text="{DynamicResource sv_dontRememberPass}" Style="{StaticResource settingTextBlock}"/>
                    <ToggleButton IsChecked="{Binding Properties.DontRememberPassword}"
                          Style="{StaticResource ModernSwitchToggleButton}"/>
                </DockPanel>

                <!-- Auto get steamid -->
                <DockPanel>
                    <TextBlock Text="{DynamicResource sv_getID}" Style="{StaticResource settingTextBlock}"/>
                    <ToggleButton IsChecked="{Binding Properties.AutoGetSteamId}"
                          Style="{StaticResource ModernSwitchToggleButton}"/>
                </DockPanel>

                <!-- Freeze mode -->
                <DockPanel>
                    <TextBlock Text="{DynamicResource sv_freezeMode}" Style="{StaticResource settingTextBlock}"/>
                    <ToggleButton IsChecked="{Binding Properties.FreezeMode}"
                          Style="{StaticResource ModernSwitchToggleButton}"/>
                </DockPanel>

                <!--Set password-->
                <DockPanel Grid.Row="8">
                    <TextBlock Text="{DynamicResource sv_password}" Style="{StaticResource settingTextBlock}"/>
                    <Button x:Name="PasswordError" Style="{StaticResource ErrorAlert}" 
                    Margin="8 7 0 7" Width="18" Height="18" Visibility="{Binding PasswordError,Converter={StaticResource BoolToVis},Mode=TwoWay}"
                    VerticalAlignment="Center" Background="Transparent" BorderThickness="0">
                        <Icon:PackIconMaterial Width="15" Height="15" Kind="Alert"/>
                        <Button.ToolTip>
                            <ToolTip ContentStringFormat="{DynamicResource sv_popup_passwordError}"/>
                        </Button.ToolTip>
                    </Button>
                    <ToggleButton x:Name="IsPassword"   IsChecked="False"
                                  Style="{StaticResource ModernSwitchToggleButton}" PreviewMouseLeftButtonDown="IsPassword_PreviewMouseLeftButtonDown"/>

                </DockPanel>

                <StackPanel x:Name="PasswordPanel" Orientation="Horizontal" Margin="20 3 0 0" Visibility="Collapsed">
                    <TextBlock Text="{DynamicResource sv_newPass}" Style="{StaticResource settingTextBlock}"/>
                    <ui:ModernPasswordBox CornerRadius="5"  Width="255" BorderColor="{DynamicResource first_main_brush}"  Password="{Binding Password,UpdateSourceTrigger=PropertyChanged}"
                                               Height="35"  Margin="8 0 0 0" HorizontalAlignment="Left" IconKeyColor="{DynamicResource settings_buttons_isMouseOver}"/>

                    <Button Style="{StaticResource ModernServiceButton}" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center"
                            IsHitTestVisible="{Binding PasswordError,Converter={StaticResource BoolInverted}}"
                            Background="Transparent" Margin="5 1 0 0" BorderBrush="Transparent" Click="SetPassword_Click">
                        <Icon:PackIconMaterial Kind="Check" Padding="2"  Width="20" Height="20"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Button.ToolTip>
                            <ToolTip ContentStringFormat="{DynamicResource sv_toolTipSetPass}"/>
                        </Button.ToolTip>
                    </Button>

                </StackPanel>




                <Rectangle Margin="0 12 0 15" Height="0.2" Width="570" Fill="{DynamicResource atv_rectangles_shadow}" HorizontalAlignment="Center">
                    <Rectangle.Effect>
                        <BlurEffect/>
                    </Rectangle.Effect>
                </Rectangle>

                <TextBlock Text="{DynamicResource sv_title_system}" 
                           VerticalAlignment="Center" Opacity="0.9"
                           FontFamily="Cascadia Mono"  FontSize="20" Margin="5 0 0 0"  Foreground="{DynamicResource second_settings_text}"/>

                <!-- Minimize to tray -->
                <DockPanel  Margin="0 5 0 0">
                    <TextBlock Text="{DynamicResource sv_minimizeOnClose}" Style="{StaticResource settingTextBlock}"/>
                    <ToggleButton IsChecked="{Binding Properties.MinimizeToTray}" VerticalAlignment="Center"
                          Style="{StaticResource ModernCheckbox}" Margin="0 0 150 0"  HorizontalAlignment="Right" Width="27" Height="27"/>
                </DockPanel>

                <!-- Minimize app on startup -->
                <DockPanel Margin="0 5 0 0">
                    <TextBlock Text="{DynamicResource sv_minimizeAtStart}" Style="{StaticResource settingTextBlock}"/>
                    <ToggleButton IsChecked="{Binding Properties.MinimizeOnStart}" VerticalAlignment="Center"
                          Style="{StaticResource ModernCheckbox}" Margin="0 0 150 0"  HorizontalAlignment="Right"  Width="27" Height="27"/>
                </DockPanel>

                <!-- Set in autostartup -->
                <DockPanel Margin="0 5 0 0">
                    <TextBlock Text="{DynamicResource sv_autoStartup}" Style="{StaticResource settingTextBlock}"/>
                    <ToggleButton IsChecked="{Binding Autostartup}" VerticalAlignment="Center"
                          Style="{StaticResource ModernCheckbox}"  Margin="0 0 150 0"  HorizontalAlignment="Right"  Width="27" Height="27"/>
                </DockPanel>

                <DockPanel Margin="0 5 0 0">
                    <TextBlock Text="{DynamicResource sv_automaticLogin}" Style="{StaticResource settingTextBlock}"/>
                    <StackPanel Orientation="Horizontal" Margin="0 0 125 0" HorizontalAlignment="Right">
                        <ComboBox x:Name="autoLogin"  ItemsSource="{Binding AutoLoginUsers}"
                              Width="170" SelectedItem="{Binding AutoLoginAccount}">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ContainParseInfo}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                        <Button Style="{StaticResource ModernServiceButton}" Width="25" Height="25" VerticalAlignment="Center" HorizontalAlignment="Left"
                            Background="Transparent" Margin="2 0 0 0" BorderBrush="Transparent" Command="{Binding ClearAutoLoginAccount}">
                            <Icon:PackIconMaterial Kind="Close" Padding="3"/>
                        </Button>
                    </StackPanel>

                </DockPanel>

            </StackPanel>
        </ScrollViewer>

        <TextBlock Foreground="{DynamicResource default_foreground}" Opacity="0.4" Margin="0 0 20 -3"
                       Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                               FontSize="12" Text="{Binding Version, StringFormat=Version: {0},Mode=OneWay}"/>

    </Grid>
</UserControl>
