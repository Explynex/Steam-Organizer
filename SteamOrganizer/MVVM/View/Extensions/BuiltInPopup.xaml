<Grid x:Class="SteamOrganizer.MVVM.View.Extensions.BuiltInPopup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SteamOrganizer.MVVM.View.Extensions"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Visibility="Collapsed"
      d:Visibility="Visible"
      d:DataContext="{d:DesignInstance local:BuiltInPopup}">
    <Border x:Name="Splash" Background="Black" CornerRadius="{Binding CornerRadius}" Opacity="0.45" MouseLeftButtonDown="HidePopup"/>

    <Border Background="{DynamicResource PrimaryBackgroundBrush}" d:Margin="0"
                Margin="0 -300 0 0" x:Name="PopupPresenter" Width="Auto" Height="Auto"
                VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="5">
        <Grid>
            <Rectangle FocusVisualStyle="{x:Null}" x:Name="cancel" Focusable="True"  VerticalAlignment="Top" HorizontalAlignment="Left" RadiusX="50" RadiusY="50"
                Margin="10" Fill="#EC6A5D" Width="12" Height="12" MouseLeftButtonDown="HidePopup"
                        Cursor="Hand"/>

            <ContentControl Margin="0 20 0 0"   Content="{Binding PopupContent}"/>

        </Grid>
    </Border>
</Grid>
