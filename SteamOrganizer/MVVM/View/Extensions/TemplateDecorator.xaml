<DockPanel x:Class="SteamOrganizer.MVVM.View.Extensions.TemplateDecorator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <TextBlock x:Name="title" FontWeight="Medium"  Text="{Binding Title,Mode=OneWay}"
                       DockPanel.Dock="Top" Margin="1 0 0 4"
                       Foreground="{DynamicResource SecondarySubBrush}" FontSize="14"/>

    <Border Style="{StaticResource ChipBorder}" Margin="0 0 10 0" >
        <Icon:PackIconMaterial x:Name="ico" Foreground="{DynamicResource TertiaryForegroundBrush}"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Border>

</DockPanel>
